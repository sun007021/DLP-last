# ==============================================================================
# DLP Project Environment Variables
# ==============================================================================
# 이 파일은 데모/교육 목적으로 기본값을 포함하고 있습니다.
# 별도의 환경 변수 설정 없이 바로 실행 가능합니다.
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_DB=ai_tlsdlp
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# ------------------------------------------------------------------------------
# Backend Configuration
# ------------------------------------------------------------------------------
SECRET_KEY=dlp-secret-key-change-in-production-minimum-32-characters-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEBUG=True

# AI Model Configuration
PII_MODEL_NAME=psh3333/roberta-large-korean-pii5
DEFAULT_PII_THRESHOLD=0.59
MODEL_MODE=LOCAL

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
# 브라우저 접속용 (클라이언트 사이드)
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=production

# ------------------------------------------------------------------------------
# Proxy Configuration
# ------------------------------------------------------------------------------
PROXY_DEBUG=1
BLOCK_ON_BACKEND_ERROR=0
BACKEND_TIMEOUT=30
BACKEND_RETRY=2

# ------------------------------------------------------------------------------
# Elasticsearch Configuration
# ------------------------------------------------------------------------------
ES_JAVA_OPTS=-Xms1g -Xmx1g

# ==============================================================================
# 중요: 프로덕션 환경에서는 다음 값들을 반드시 변경하세요!
# - POSTGRES_PASSWORD: 강력한 비밀번호로 변경
# - SECRET_KEY: 32자 이상의 랜덤 문자열로 변경
# ==============================================================================
