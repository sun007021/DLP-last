# ==============================================================================
# DLP Project Environment Variables
# ==============================================================================
# Copy this file to .env and modify as needed
# Note: docker-compose.yml has default values, so this file is optional
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_DB=ai_tlsdlp
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# ------------------------------------------------------------------------------
# Backend Configuration
# ------------------------------------------------------------------------------
SECRET_KEY=dlp-secret-key-change-in-production-minimum-32-characters-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEBUG=True

# AI Model Configuration
PII_MODEL_NAME=psh3333/roberta-large-korean-pii5
DEFAULT_PII_THRESHOLD=0.59
MODEL_MODE=LOCAL

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
# For browser access (client-side), use localhost
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=production

# ------------------------------------------------------------------------------
# Proxy Configuration
# ------------------------------------------------------------------------------
PROXY_DEBUG=1
BLOCK_ON_BACKEND_ERROR=0
BACKEND_TIMEOUT=30
BACKEND_RETRY=2

# ------------------------------------------------------------------------------
# Elasticsearch Configuration
# ------------------------------------------------------------------------------
ES_JAVA_OPTS=-Xms1g -Xmx1g

# ==============================================================================
# Notes:
# - Default values are already set in docker-compose.yml
# - Modify this file only if you need to change defaults
# - Do not commit .env file to version control
# ==============================================================================
